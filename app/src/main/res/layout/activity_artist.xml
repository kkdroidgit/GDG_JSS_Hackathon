<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paperwrk.gdgjsshackathon.ArtistActivity">

    <ImageView
        android:id="@+id/artist_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/artist_image"
        android:layout_marginTop="51dp"
        android:text="Artist Name"
        android:textSize="30sp" />

    <TextView
        android:textSize="28sp"
        android:id="@+id/artist_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/artist_name"
        android:layout_marginTop="18dp"
        android:text="Description" />

    <TextView
        android:gravity="center_horizontal"
        android:textSize="28sp"
        android:id="@+id/artist_subs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="5K Subscribers" />

    <TextView
        android:gravity="center_horizontal"
        android:textSize="28sp"
        android:id="@+id/artist_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/artist_subs"
        android:layout_marginTop="33dp"
        android:text="1.02M Views" />

    <TextView
        android:textSize="28sp"
        android:id="@+id/artist_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/artist_views"
        android:layout_marginTop="35dp"
        android:hint="Your Playlist ID" />


</RelativeLayout>
